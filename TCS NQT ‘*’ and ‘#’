import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {
    public static void main(String[] args) {
       Scanner sc = new Scanner(System.in);
        String s = sc.nextLine();
        int starcount = 0;
        int hashcount = 0;   
        for(int i = 0; i < s.length(); i++) {
            if(s.charAt(i) == '*') {
                starcount++;
            } 
            else if(s.charAt(i) == '#') {
                hashcount++;
            }
        }
        
        System.out.println(starcount - hashcount); 
    }
}
