import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String str = sc.nextLine();
        
        int upper=0;
        
        for(int i = 0; i < str.length(); i++){
            char c = str.charAt(i);
            
            if(c >= 'A' && c <= 'Z'){
               upper++;
            } 
        }
            System.out.println(upper);
           
    }
}
